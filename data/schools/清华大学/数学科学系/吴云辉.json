/_dwr/engine.js\"></script><script language=\"javascript\" src=\"/system/resource/js/news/newscontent.js\"></script><script language=\"javascript\" src=\"/system/resource/js/ajax.js\"></script><form name=\"_newscontent_fromname\"><script language=\"javascript\" src=\"/system/resource/js/jquery/jquery-latest.min.js\"></script>\n<div class=\"t-img1\">\n    <span class=\"gp-img-responsive\"><img src=\"/__local/B/C5/BE/70184E129D66DBDF45EF96BA2C1_4B71B6CE_16784.jpg\"></span>\n</div>\n<div class=\"t-txt1 gp-white\">\n    <h3>吴云辉</h3>\n    <ul class=\"t-list5 gp-ul-inline\">\n        <li>教授</li>\n        <li>电话：</li>\n        <li>邮箱：yunhui_wu@tsinghua.edu.cn</li>\n    </ul>\n</div>\n</form>\n\n    </div>\n</div>\n<!-- subBanner结束 -->\n<!--subPage开始-->\n<div class=\"subPage subPage4 gp-clearFix\">\n    <div class=\"gp-container gp-clearFix\">\n        <div class=\"javascript:;gp-bread gp-md-fr\">\n                    \n                <a href=\"../../index.htm\">首页</a>\n\n                <span class=\"\"> --</span>\n                <a href=\"../../szdw1/jsml.htm\">师资队伍</a>\n\n                <span class=\"\"> --</span>\n                <a href=\"../../szdw1/zzjs.htm\">教师简介</a>\n\n                <span class=\"\"> --</span>\n                <a>正文</a>\n\n\n        </div>\n    </div>\n    <div class=\"gp-container xw-mode1 gp-clearFix  pd80 sznry\">\n        \n\n<script type=\"text/javascript\">NewsvoteDWR.getNewsLinkUrl(1901,'1701136898','vsb',newsSkip);function newsSkip(data){if(data != \"\"){window.location.href = data;}}</script><form name=\"_newscontent_fromname\">\n<div class=\"t-left gp-sm-fl dynamicContentMenu scod-theme-material\">\n  <!--<ul>\n        <li class=\"active\" onclick=\"maodian('t1')\">基本信息</li>\n        <li onclick=\"maodian('t2')\">工作履历</li>\n        <li onclick=\"maodian('t3')\">研究领域</li>\n        <li onclick=\"maodian('t4')\">所授课程</li>\n        <li onclick=\"maodian('t5')\">奖励与荣誉</li>\n        <li onclick=\"maodian('t6')\">学术成果</li>\n        <li onclick=\"maodian('t7')\">人才培养</li>\n    </ul>-->\n<ul id=\"dynamicContentMenu__header0\" class=\"dynamicContentMenu__header scod-flex-container\"><li class=\"dynamicContentMenu__item active\" data-unique=\"基本信息\"><a>基本信息</a></li></ul><ul id=\"dynamicContentMenu__header1\" class=\"dynamicContentMenu__header scod-flex-container\"><li class=\"dynamicContentMenu__item\" data-unique=\"工作履历\"><a>工作履历</a></li></ul><ul id=\"dynamicContentMenu__header2\" class=\"dynamicContentMenu__header scod-flex-container\"><li class=\"dynamicContentMenu__item\" data-unique=\"研究领域\"><a>研究领域</a></li></ul><ul id=\"dynamicContentMenu__header3\" class=\"dynamicContentMenu__header scod-flex-container\"><li class=\"dynamicContentMenu__item\" data-unique=\"所授课程\"><a>所授课程</a></li></ul><ul id=\"dynamicContentMenu__header4\" class=\"dynamicContentMenu__header scod-flex-container\"><li class=\"dynamicContentMenu__item\" data-unique=\"奖励与荣誉\"><a>奖励与荣誉</a></li></ul><ul id=\"dynamicContentMenu__header5\" class=\"dynamicContentMenu__header scod-flex-container\"><li class=\"dynamicContentMenu__item\" data-unique=\"学术成果\"><a>学术成果</a></li></ul><ul id=\"dynamicContentMenu__header6\" class=\"dynamicContentMenu__header scod-flex-container\"><li class=\"dynamicContentMenu__item\" data-unique=\"人才培养\"><a>人才培养</a></li></ul></div>\n<div class=\"t-right\">\n<div class=\"t-col1\" id=\"t1\">\n    <div class=\"t-title\">\n        <a class=\"t-more\" href=\"#\"></a>\n        <div name=\"基本信息\" data-unique=\"基本信息\"></div><h2>基本信息</h2>\n    </div>\n    <div class=\"t-con1 gp-f17\">\n    <div class=\"v_news_content\">\n<p><span style=\"font-family: 宋体, SimSun; font-size: 16px;\">博士（美国布朗大学（Brown University） 2012）、教授（博导）</span></p>\n<p><br></p>\n</div>\n  \n    </div>\n</div>\n<div class=\"t-col1\" id=\"t2\">\n    <div class=\"t-title\">\n        <a class=\"t-more\" href=\"#\"></a>\n        <div name=\"工作履历\" data-unique=\"工作履历\"></div><h2>工作履历</h2>\n    </div>\n    <div class=\"t-con1 gp-f17\">\n    <p><span style=\"background-color: white; color: rgb(34, 34, 34); font-family: 宋体, SimSun; font-size: 16px;\">2023-至今 清华大学数学科学系、丘成桐数学科学中心教授</span></p>\n<p><span style=\"background-color: white; color: rgb(34, 34, 34); font-family: 宋体, SimSun; font-size: 16px;\">2019-2023 清华大学数学科学系、丘成桐数学科学中心副教授&nbsp;</span></p>\n<p><span style=\"background-color: white; color: rgb(34, 34, 34); font-family: 宋体, SimSun; font-size: 16px;\">2016-2019 清华大学丘成桐数学科学中心助理教授</span></p>\n<p><span style=\"background-color: white; color: rgb(34, 34, 34); font-family: 宋体, SimSun; font-size: 16px;\">2012-2016 美国莱斯大学(Rice University) G.C.Evans讲师</span></p>\n<p><span style=\"line-height: 115%;color: rgb(34, 34, 34);background: white\"><br></span></p>\n \n    </div>\n</div>\n<div class=\"t-col1\" id=\"t3\">\n    <div class=\"t-title\">\n        <a class=\"t-more\" href=\"#\"></a>\n        <div name=\"研究领域\" data-unique=\"研究领域\"></div><h2>研究领域</h2>\n    </div>\n    <div class=\"t-con1 gp-f17\">\n\n    <p><span style=\"font-size: 16px;\"><span style=\"font-family: &quot;times new roman&quot;; font-size: 16px;\">Teichmüller<span style=\"font-size: 16px; font-family: 宋体, SimSun;\">理论、几何</span></span></span></p>\n    </div>\n</div>\n<div class=\"t-col1\" id=\"t4\">\n    <div class=\"t-title\">\n        <a class=\"t-more\" href=\"#\"></a>\n        <div name=\"所授课程\" data-unique=\"所授课程\"></div><h2>所授课程</h2>\n    </div>\n    <div class=\"t-con1 gp-f17\">\n       <p><span style=\"font-family: 宋体, SimSun; font-size: 16px;\">黎曼曲面、<span style=\"font-family: &quot;times new roman&quot;; font-size: 16px; text-wrap: wrap;\">Teichmüller</span><span style=\"font-size: 16px; text-wrap: wrap; font-family: 宋体, SimSun;\">理论、</span>测度与积分、复分析等<br></span></p>\n<p><br></p>\n    </div>\n</div>\n<div class=\"t-col1\" id=\"t5\">\n    <div class=\"t-title\">\n        <a class=\"t-more\" href=\"#\"></a>\n        <div name=\"奖励与荣誉\" data-unique=\"奖励与荣誉\"></div><h2>奖励与荣誉</h2>\n    </div>\n    <div class=\"t-con1 gp-f17\">\n  <p><span style=\"font-family: 宋体, SimSun; font-size: 16px;\">暂无<br></span></p>\n<p><br></p>\n<p><br></p>\n    </div>\n</div>\n<div class=\"t-col1\" id=\"t6\">\n    <div class=\"t-title\">\n        <a class=\"t-more\" href=\"#\"></a>\n        <div name=\"学术成果\" data-unique=\"学术成果\"></div><h2>学术成果</h2>\n    </div>\n    <div class=\"t-con1 gp-f17\">\n      <p><span style=\"font-family: &quot;times new roman&quot;; font-size: 16px;\"></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; font-family: &quot;Microsoft YaHei&quot;; font-size: 16px; line-height: normal;\"><span style=\"font-family: &quot;times new roman&quot;; font-size: 18px;\"><strong><span style=\"font-family: &quot;times new roman&quot;; margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">Selected Publications</span></strong></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; font-family: &quot;Microsoft YaHei&quot;; font-size: 16px; line-height: normal;\"><span style=\"font-family: &quot;times new roman&quot;;\"><strong><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">1. Prime geodesic theorem and closed geodesics for large genus</span></strong></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; line-height: normal;\"><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; font-size: 16px; font-family: &quot;times new roman&quot;;\">(with Yuhao Xue), <a href=\"https://arxiv.org/abs/2209.10415\" target=\"_blank\" textvalue=\"Journal of the European Mathematical Society\" style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(79, 129, 189);\"><em>Journal of the European Mathematical Society</em></a><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(79, 129, 189);\"><em>,</em><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(0, 112, 192);\"></span><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(0, 176, 240);\"><em> </em></span></span>to appear, (2024), 63 pages.</span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; font-family: &quot;Microsoft YaHei&quot;; font-size: 16px; line-height: normal;\"><span style=\"font-family: &quot;times new roman&quot;;\"><strong><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">2. </span></strong><strong style=\"text-indent: 0em;\"><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">On ends of finite-volume noncompact manifolds of nonpositive curvature</span></strong></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; font-family: &quot;Microsoft YaHei&quot;; font-size: 16px; line-height: normal;\"><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; font-family: &quot;times new roman&quot;;\">(with Ran Ji),<span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(79, 129, 189);\"> </span></span><a href=\"https://link.springer.com/article/10.1007/s00222-024-01266-0\" target=\"_blank\" textvalue=\"Inventiones Mathematicae\" style=\"color: rgb(79, 129, 189); margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; font-family: &quot;times new roman&quot;;\"><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\"><em><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(0, 112, 192);\">Inventiones Mathematicae</span></em></span></a><span style=\"font-family: &quot;times new roman&quot;;\"><span style=\"text-indent: 0em; margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(79, 129, 189);\">, </span><span style=\"text-indent: 0em; margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">237 (2024), no.2, 735-777.</span></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; font-family: &quot;Microsoft YaHei&quot;; font-size: 16px; line-height: normal;\"><span style=\"font-family: &quot;times new roman&quot;;\"><strong><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">3. On second eigenvalues of closed hyperbolic surfaces for large genus</span></strong></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; font-family: &quot;Microsoft YaHei&quot;; font-size: 16px; line-height: normal;\"><span style=\"text-indent: 0em; margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; font-family: &quot;times new roman&quot;;\">(with Yuxin He), </span><a href=\"https://arxiv.org/abs/2207.12919\" target=\"_blank\" style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(79, 129, 189); font-family: &quot;times new roman&quot;;\"><em>Journal of Differential Geometry</em></a><span style=\"font-family: &quot;times new roman&quot;;\"><span style=\"color: rgb(79, 129, 189);\"><em><span style=\"text-indent: 0em; margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">,</span></em></span><em><span style=\"text-indent: 0em; margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(79, 129, 189);\"></span></em><span style=\"text-indent: 0em; margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(79, 129, 189);\"> </span><span style=\"text-indent: 0em; margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">to appear, (2024), 38 pages.</span></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; font-family: &quot;Microsoft YaHei&quot;; font-size: 16px; line-height: normal;\"><span style=\"font-family: &quot;times new roman&quot;;\"><strong><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">4. Large genus asymptotics for lengths of separating closed geodesics on random surfac</span></strong><strong><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">es</span></strong></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; font-family: &quot;Microsoft YaHei&quot;; font-size: 16px; line-height: normal;\"><span style=\"text-indent: 0em; font-family: &quot;times new roman&quot;;\"><span style=\"text-indent: 0em; margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">(with Xin Nie and Yuhao Xue)</span><span style=\"text-indent: 0em; color: rgb(0, 176, 240); margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">, </span></span><a href=\"https://londmathsoc.onlinelibrary.wiley.com/doi/abs/10.1112/topo.12276\" target=\"_blank\" textvalue=\"Journal of Topology\" style=\"color: rgb(79, 129, 189); font-family: &quot;times new roman&quot;;\"><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(0, 112, 192);\"><em>Journal of </em></span><span style=\"color: rgb(0, 112, 192);\"><i>Topology</i></span></a><span style=\"font-family: &quot;times new roman&quot;;\"><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; text-indent: 0em; color: rgb(79, 129, 189);\">,</span><span style=\"text-indent: 0em;\"><span style=\"text-indent: 0em; margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(102, 102, 102);\"></span><span style=\"text-indent: 0em; color: rgb(0, 176, 240); margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\"> </span><span style=\"text-indent: 0em; margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">16 (2023), no.1, 106-175.</span></span></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; font-family: &quot;Microsoft YaHei&quot;; font-size: 16px; line-height: normal;\"><span style=\"font-family: &quot;times new roman&quot;;\"><strong><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(102, 102, 102);\">5. </span></strong><strong style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">Random hyperbolic sur<span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">faces of l</span>arge genus have first eigenvalues greater than </strong><strong style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">3/16-epsilon</strong></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; font-family: &quot;Microsoft YaHei&quot;; font-size: 16px; line-height: normal;\"><span style=\"text-indent: 0em; font-family: &quot;times new roman&quot;;\">(with Yuhao Xue), </span><a href=\"https://link.springer.com/article/10.1007/s00039-022-00595-7\" target=\"_blank\" textvalue=\"Geometric and Functional Analysis (GAFA)\" style=\"color: rgb(79, 129, 189); font-family: &quot;times new roman&quot;;\"><em style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(0, 112, 192);\">Geometric and Functional Analysis (GAFA)</em></a><span style=\"font-family: &quot;times new roman&quot;;\"><span style=\"color: rgb(79, 129, 189);\"><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; text-indent: 0em;\">,</span><span style=\"text-indent: 0em;\"><span style=\"text-indent: 0em; margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(0, 112, 192);\"></span> </span></span><span style=\"text-indent: 0em;\">32 (2022), 340-410.</span></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; font-family: &quot;Microsoft YaHei&quot;; font-size: 16px; line-height: normal;\"><span style=\"text-indent: 0em; font-family: &quot;times new roman&quot;;\"><strong><span style=\"text-indent: 0em; margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">6. </span><strong style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">O</strong></strong><strong style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">ptimal lower bounds for first eigenvalues of Riemann surfaces for large genus</strong></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; font-family: &quot;Microsoft YaHei&quot;; font-size: 16px; line-height: normal;\"><span style=\"text-indent: 0em; font-family: &quot;times new roman&quot;;\">(with Yuhao Xue), </span><a href=\"https://muse.jhu.edu/article/861100/summary\" target=\"_blank\" textvalue=\"American Journal of Mathematics\" style=\"color: rgb(79, 129, 189); margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; font-family: &quot;times new roman&quot;;\"><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\"><em style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">American Journal of Mathematics</em></span></a><span style=\"font-family: &quot;times new roman&quot;;\"><span style=\"text-indent: 0em; color: rgb(79, 129, 189);\">, </span><span style=\"text-indent: 0em;\">144 (2022), no.4, 1087-1114.</span></span></p>\n<p style=\"text-wrap: wrap; font-family: &quot;open sans&quot;, sans-serif; font-size: medium; background-color: rgb(255, 255, 255); line-height: normal;\"><span style=\"font-size: 16px; font-family: &quot;times new roman&quot;;\"></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; text-align: justify; line-height: normal;\"><span style=\"font-size: 16px; font-family: &quot;times new roman&quot;;\"><strong><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">7. </span><strong style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">U</strong></strong><strong style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">niform bounds on harmonic Beltrami differentials and Weil-Petersson curvatures</strong></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; text-align: justify; line-height: normal;\"><span style=\"font-size: 16px; font-family: &quot;times new roman&quot;;\">(with Martin Bridgeman), </span><a href=\"https://www.degruyter.com/document/doi/10.1515/crelle-2020-0005/html\" target=\"_blank\" textvalue=\"Journal für die reine und angewandte Mathematik (Crelle's Journal)\" style=\"color: rgb(79, 129, 189); margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; font-size: 16px; font-family: &quot;times new roman&quot;;\"><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\"><em style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">Journal für die reine und angewandte Mathematik (Crelle's Journal)</em></span></a><span style=\"font-size: 16px; font-family: &quot;times new roman&quot;;\"><span style=\"color: rgb(79, 129, 189);\">,</span> 770 (2021), 159-181.</span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; text-align: justify; line-height: normal;\"><span style=\"font-size: 16px; font-family: &quot;times new roman&quot;;\"><strong><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">8. </span><strong style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">On</strong></strong><strong style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\"> positive scalar curvature and moduli of curves</strong></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; text-align: justify; line-height: normal;\"><span style=\"font-size: 16px; font-family: &quot;times new roman&quot;;\">(with Kefeng Liu), </span><a href=\"https://projecteuclid.org/journals/journal-of-differential-geometry/volume-111/issue-2/On-positive-scalar-curvature-and-moduli-of-curves/10.4310/jdg/1549422104.full\" target=\"_blank\" textvalue=\"Journal of Differential Geometry\" style=\"color: rgb(79, 129, 189); margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; font-size: 16px; font-family: &quot;times new roman&quot;;\"><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\"><em style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">Journal of Differential Geometry</em></span></a><span style=\"font-size: 16px; font-family: &quot;times new roman&quot;;\"><span style=\"color: rgb(79, 129, 189);\">, </span>111 (2019), no.2, 315-338.</span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; text-align: justify; line-height: normal;\"><span style=\"font-size: 16px; font-family: &quot;times new roman&quot;;\"><strong><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">9. </span><strong style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">Un</strong></strong><strong style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">iform bounds for Weil-Petersson curvatures</strong></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; text-align: justify; line-height: normal;\"><span style=\"font-size: 16px; font-family: &quot;times new roman&quot;;\">(with Michael Wolf), </span><a href=\"https://londmathsoc.onlinelibrary.wiley.com/doi/10.1112/plms.12152\" target=\"_blank\" textvalue=\"Proceedings of the London Mathematical Society\" style=\"color: rgb(79, 129, 189); font-size: 16px; font-family: &quot;times new roman&quot;;\"><em><span style=\"color: rgb(0, 112, 192); margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">Proceedings of the London Mathematical Society</span></em></a><span style=\"font-size: 16px; font-family: &quot;times new roman&quot;;\"><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(79, 129, 189);\">, </span>(3) 117 (2018), no.5, 1041-1076.</span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; text-align: justify; line-height: normal;\"><span style=\"font-size: 16px; font-family: &quot;times new roman&quot;;\"><strong><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">10. </span><strong style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">The </strong></strong><strong style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\">Riemannian sectional curvature operator of Weil-Petersson metric on Teichmüller space and its application</strong></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; text-align: justify; line-height: normal;\"><a href=\"https://www.projecteuclid.org/journals/journal-of-differential-geometry/volume-96/issue-3/The-Riemannian-sectional-curvature-operator-of-the-Weil-Petersson-metric/10.4310/jdg/1395321848.full\" target=\"_blank\" textvalue=\"Journal of Differential Geometry\" style=\"color: rgb(79, 129, 189); margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; font-size: 16px; font-family: &quot;times new roman&quot;;\"><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\"><em><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(0, 112, 192);\">Journal of Differential Geometry</span></em></span></a><span style=\"font-size: 16px; font-family: &quot;times new roman&quot;;\"><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(79, 129, 189);\"><em><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; color: rgb(0, 112, 192);\"></span></em>,</span><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased;\"> 96 (2014), no.3, 507-530.</span></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; text-align: justify;\"><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; font-family: 微软雅黑, &quot;Microsoft YaHei&quot;; font-size: 18px;\"><strong style=\"font-family: &quot;Microsoft YaHei&quot;; font-size: 16px;\"><span style=\"color: rgb(129, 136, 188); font-size: 18px;\"><br></span></strong></span></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; text-align: justify;\"><strong><span style=\"margin: 0px; padding: 0px; -webkit-font-smoothing: subpixel-antialiased; font-size: 18px; color: rgb(0, 0, 0); font-family: &quot;times new roman&quot;;\">Link</span></strong></p>\n<p style=\"text-indent: 0em; text-wrap: wrap; text-align: justify;\"><span style=\"font-family: &quot;times new roman&quot;; font-size: 16px;\">All of my papers on </span><a href=\"https://arxiv.org/search/advanced?advanced=&amp;terms-0-operator=AND&amp;terms-0-term=wu%2Cyunhui&amp;terms-0-field=author&amp;classification-mathematics=y&amp;classification-physics_archives=all&amp;classification-include_cross_list=include&amp;date-filter_by=all_dates&amp;date-year=&amp;date-from_date=&amp;date-to_date=&amp;date-date_type=submitted_date&amp;abstracts=show&amp;size=50&amp;order=-announced_date_first\" target=\"_blank\" textvalue=\"Arxiv\" style=\"color: rgb(79, 129, 189); font-family: &quot;times new roman&quot;; font-size: 16px;\">Arxiv</a><span style=\"font-family: &quot;times new roman&quot;; font-size: 16px;\"> and </span><a href=\"https://mathscinet.ams.org/mathscinet/2006/mathscinet/search/publications.html?pg4=AUCN&amp;s4=wu%2Cyunhui&amp;co4=AND&amp;pg5=TI&amp;s5=&amp;co5=AND&amp;pg6=PC&amp;s6=&amp;co6=AND&amp;pg7=ALLF&amp;s7=&amp;co7=AND&amp;dr=all&amp;yrop=eq&amp;arg3=&amp;yearRangeFirst=&amp;yearRangeSecond=&amp;pg8=ET&amp;s8=All&amp;review_format=html&amp;Submit=%E6%90%9C%E7%B4%A2\" target=\"_blank\" style=\"color: rgb(79, 129, 189); font-family: &quot;times new roman&quot;; font-size: 16px;\">MathSciNet</a></p>\n<p style=\"-qt-paragraph-type:empty; margin-top:0px; margin-bottom:0px; margin-left:0px; margin-right:0px; -qt-block-indent:0; text-indent:0px;\"><br></p>\n<p><br></p>\n    </div>\n</div>\n<div class=\"t-col1\" id=\"t7\">\n                <div class=\"t-title\">\n                    <a class=\"t-more\" href=\"#\"></a>\n                    <div name=\"人才培养\" data-unique=\"人才